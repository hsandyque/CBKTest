<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.HouseDetailFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_house_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_backspace_24"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_plant_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_n"
        tools:itemCount="6"
        tools:listitem="@layout/item_plant_list"/>
</LinearLayout>