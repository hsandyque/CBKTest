<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.PlantDetailFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_plant_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_backspace_24"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_1">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_plant_cover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:minHeight="200dp"
                tools:background="@color/colorAccent"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_plant_name_cht"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_n"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_plant_cover"
                tools:text="Testing"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_plant_name_lating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_plant_name_cht"
                app:layout_constraintEnd_toEndOf="@id/tv_plant_name_cht"
                app:layout_constraintTop_toBottomOf="@id/tv_plant_name_cht"
                tools:text="Testing"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_label_plant_also_known"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_n"
                app:layout_constraintStart_toStartOf="@id/tv_plant_name_cht"
                app:layout_constraintEnd_toEndOf="@id/tv_plant_name_cht"
                app:layout_constraintTop_toBottomOf="@id/tv_plant_name_lating"
                android:text="@string/label_also_known"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_plant_also_known"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_plant_name_cht"
                app:layout_constraintEnd_toEndOf="@id/tv_plant_name_cht"
                app:layout_constraintTop_toBottomOf="@id/tv_label_plant_also_known"
                tools:text="Testing"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_label_plant_brief"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_n"
                app:layout_constraintStart_toStartOf="@id/tv_plant_name_cht"
                app:layout_constraintEnd_toEndOf="@id/tv_plant_name_cht"
                app:layout_constraintTop_toBottomOf="@id/tv_plant_also_known"
                android:text="@string/label_brief"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_plant_brief"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_plant_name_cht"
                app:layout_constraintEnd_toEndOf="@id/tv_plant_name_cht"
                app:layout_constraintTop_toBottomOf="@id/tv_label_plant_brief"
                tools:text="Testing"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_label_plant_feature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_n"
                app:layout_constraintStart_toStartOf="@id/tv_plant_name_cht"
                app:layout_constraintEnd_toEndOf="@id/tv_plant_name_cht"
                app:layout_constraintTop_toBottomOf="@id/tv_plant_brief"
                android:text="@string/label_feature"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_plant_feature"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_plant_name_cht"
                app:layout_constraintEnd_toEndOf="@id/tv_plant_name_cht"
                app:layout_constraintTop_toBottomOf="@id/tv_label_plant_feature"
                tools:text="Testing"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_label_plant_function"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_n"
                app:layout_constraintStart_toStartOf="@id/tv_plant_name_cht"
                app:layout_constraintEnd_toEndOf="@id/tv_plant_name_cht"
                app:layout_constraintTop_toBottomOf="@id/tv_plant_feature"
                android:text="@string/label_function"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_plant_function"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_plant_name_cht"
                app:layout_constraintEnd_toEndOf="@id/tv_plant_name_cht"
                app:layout_constraintTop_toBottomOf="@id/tv_label_plant_function"
                tools:text="Testing"/>
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/InfoStyle"
                android:id="@+id/tv_plant_update"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_n"
                app:layout_constraintStart_toStartOf="@id/tv_plant_name_cht"
                app:layout_constraintEnd_toEndOf="@id/tv_plant_name_cht"
                app:layout_constraintTop_toBottomOf="@id/tv_plant_function"
                tools:text="@string/label_function"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>